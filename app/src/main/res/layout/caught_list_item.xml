<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    android:background="@color/colorWhite">


    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/caughtlist_id"
            android:textSize="17sp"
            android:textColor="@color/colorBlack"
            android:text="OpID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/caughtlist_owner"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Owner"
            android:textColor="@color/colorBlack"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/caughtlist_price"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Price"
            android:textColor="@color/colorGreen"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/caughtlist_distance"
            android:textSize="17sp"
            android:textColor="@color/colorBackgorundLight"
            android:text="Distance"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/caughtlist_btnRoute"
            android:drawableEnd="@drawable/icon_route"
            android:text="Take A Route"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/caughtlist_btnCancel"
            android:drawableEnd="@drawable/icon_cancel"
            android:text="CANCEL OPPORTUNITY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <View

        android:background="@color/colorBackgroundDark"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

</LinearLayout>