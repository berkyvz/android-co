<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <View
        android:background="@color/colorBackgroundDark"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>


    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp">

       <LinearLayout
           android:gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="match_parent">

           <TextView
               android:textStyle="bold"
               android:id="@+id/oplist_id"
               android:layout_width="49dp"
               android:layout_height="61dp"
               android:gravity="center"
               android:text="ID"
               android:textColor="@color/colorBlack"
               android:textSize="18sp" />

       </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:id="@+id/oplist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Owner Company"
                android:textColor="@color/colorBlack"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/oplist_desc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description 1"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/oplist_desc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description 2"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />



            </LinearLayout>

            <TextView
                android:id="@+id/oplist_desc3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description 3"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />




        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="90dp"
            android:layout_height="match_parent">





            <TextView
                android:layout_marginTop="25dp"
                android:id="@+id/oplist_distance"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="distance"
                android:textColor="@color/colorBackgorundLight"
                android:textStyle="bold"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/oplist_city"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="city"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="20sp" />



        </LinearLayout>





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="73dp"
            android:textStyle="bold"
            android:id="@+id/oplist_count"
            android:padding="2dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="count"
            android:textColor="@color/design_default_color_primary"
            android:textSize="22sp" />


        <TextView
            android:layout_marginLeft="2dp"
            android:id="@+id/oplist_price"
            android:padding="2dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="@color/colorGreen"
            android:textStyle="bold"
            android:textSize="22sp" />

        <Button
            android:layout_marginLeft="2dp"
            android:id="@+id/oplist_button_add"
            android:background="@drawable/icon_add"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <View

        android:background="@color/colorBackgroundDark"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>



</LinearLayout>